{% extends 'base.html.twig' %}


{% block stylesheets %}
<link rel="stylesheet" href="{{asset('./style/nabilStyle.css')}}">
<link rel="shortcut icon" href="{{asset('./assets/img/logo.svg')}}" type="image/x-icon">
{#
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous"> #}
{% endblock %}

{% block title %}
{{title}}
{% endblock %}

{% block javascripts %}
<script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
{#
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script> #}
{% endblock %}


{% block body %}

{% for message in app.flashes('warning') %}
<div class="flash flash__error">
    {{ message }}
</div>
{% endfor %}

{% for message in app.flashes('success') %}
<div class="flash flash__success">
    {{ message }}
</div>
{% endfor %}

<div class="form__container">

    <lottie-player style="margin-top: -5rem;" class="form__ill__lottie-player"
        src="{{asset('./assets/jsonAnimation/header2.json')}}" background="transparent" speed="1" loop
        autoplay></lottie-player>

    <div style="min-height: auto;height: fit-content" class="form signupForm">
        <h1 class="form__heading">Forgot password</h1>

        {{ form_start(changePassForm,{'attr': {'novalidate': 'novalidate','autocomplete': 'off'}}
        ) }}


        <div class="form__input__group-password">
            <div class="form__input__group" style="margin-right: 10px;">
                <label for="password" class="form__input__label">New Password<span>*</span>
                </label>
                {# <input id="password" name="password" type="password" class="form__input" placeholder="Password"> #}
                {{form_widget(changePassForm.password.first, {'attr': {'class':
                'form__input','placeholder':"Password"}})}}
                <div class="form_alert form_alert_error">
                    {{ form_errors(changePassForm.password.first)}}
                </div>
                <svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" fill="none" stroke-width="2"
                    stroke-linecap="round" stroke-linejoin="round" class="form__input__icon">
                    <path
                        d="M21 2l-2 2m-7.61 7.61a5.5 5.5 0 1 1-7.778 7.778 5.5 5.5 0 0 1 7.777-7.777zm0 0L15.5 7.5m0 0l3 3L22 7l-3-3m-3.5 3.5L19 4">
                    </path>
                </svg>
            </div>

            <div class="form__input__group">
                <label for="repassword" class="form__input__label">Confirm Password<span>*</span>
                </label>
                {# <input id="repassword" name="repassword" type="password" class="form__input" placeholder="Password">
                #}
                {{form_widget(changePassForm.password.second, {'attr': {'class':
                'form__input','placeholder':"Confirm Password"}})}}
                <svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 24 24" fill="none" stroke-width="2"
                    stroke-linecap="round" stroke-linejoin="round" class="form__input__icon">
                    <path
                        d="M21 2l-2 2m-7.61 7.61a5.5 5.5 0 1 1-7.778 7.778 5.5 5.5 0 0 1 7.777-7.777zm0 0L15.5 7.5m0 0l3 3L22 7l-3-3m-3.5 3.5L19 4">
                    </path>
                </svg>

            </div>

        </div>


        {# <input class="navigation__primary-btn form__btn" type="submit" value="Confirm"> #}

        {{ form_end(changePassForm) }}

        {# <p class="form__member">
            Back to login
            <a class="form__member__link" href="{{path('app_login')}}">Login</a>
        </p> #}
    </div>

</div>

{% endblock %}