{% extends 'funds/basedash.html.twig' %}
{% block nav %}

{% endblock %}


{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('./contents/css/ST.css')}}">
    <link rel="stylesheet" href="{{asset('./contents/css/ST1.css')}}">
    <link rel="stylesheet" href="{{asset('./contents/css/ST2.css')}}">
   
	<link rel="icon" href="{{asset('./contents/img/logo1.png')}}">
{% endblock %}

{% block Fundrising %}
      
      <div class="dash__container">
        <nav class="dash__navbar">
          <div class="dash__navbar-text">Dashboard</div>
          <div class="navbar__items">
            <span class="navbar__item">
              <i class="bx bx-log-out item"></i>
            </span>

            <div class="notification-icon">
              <span class="cart-icon__span">3</span>
              <span class="navbar__item">
                <i class="bx bx-bell item"></i>
              </span>
            </div>

            <span class="dash__top-bar__fullname">  {{user.fullname}} </span>

            <div class="dash__top-bar__img-container">
              <a href="#">
                <img
                  src="{{asset('./assets/uploads/img/') ~ user.imgUrl }}"
                  class="dash__top-bar__img"
                  alt="profile"
                />
              </a>
            </div>
          </div>
        </nav>
        <!--end dash__navbar-->

        <div class="dash__container-card">
          <div class="dash__card">
            <div class="dash__card-rightSide">
              <div class="">
              
                <a style="padding:1rem 2rem" href="{{ path('app_addFundrising') }}" class="dash__card-rightSide__add-new-product-btn">Add Fundrising</a>
              </div>
              
            </div>
            <div class="product">
          <div class="product-title">Participants List</div>

        <style>
          .chart-button {
            display: inline-flex;
            display: inline-block;
            padding: 4px 9px;
            font-size: 14px;
            font-weight: 600;
            line-height: 1.5;
            text-align: center;
            white-space: nowrap;
            vertical-align: middle;
            border: 1px solid #ccc;
            border-radius: 3rem;
            color: #333;
            background-color: #defee6;
            cursor: pointer;
          }
          
          .chart-button:hover {
           color: #333;
            background-color: #e6e6e6;
            border-color: #adadad;
            padding: 5px;
          }
          
          .pdf-button {
            display: inline-flex;
          }
          
          .pdf-button:hover {
          
            border-radius: 0px;
            padding: 5px;
          }
            .right {
              float: right;
               border-radius: 0.5px;
             
            }
          </style>
          <table class="donations-table">
              <thead>
                  <tr>
                      <th>Name</th>
                      <th>Amount</th>
                      <th>Comment</th>
                  </tr>
              </thead>
              <tbody>
                  {% for donation in donations %}
                      <tr>
                          <td>{{ donation.user }}</td>
                          <td>{{ donation.amount }}</td>
                          <td>{{ donation.comment }}</td>
                      </tr>
                  {% endfor %}
              </tbody>
          </table>
      </div>
      
      <style>
          .product-title {
              background-color: green;
              color: white;
              padding: 10px;
              font-size: 1.2em;
              font-weight: bold;
              margin-right:40px;
              margin-top: 150px; /* Add some margin to move the title down */
          }
      
          .donations-table {
              width: 100%;
              border-collapse: collapse;
              font-size: 1.2em;
              margin-top: 50px;
              margin-right:70px;
          }
      
          .donations-table th, .donations-table td {
              padding: 10px;
              text-align: left;
              border: 1px solid #ddd;
          }
      
          .donations-table th {
              background-color: #f2f2f2;
          }
      </style>
      
      
          
                
  {% endblock %}                 
             
           
              
           
    



