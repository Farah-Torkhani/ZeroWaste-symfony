              <option value="aloo">aloo</option>
            </select>

            <input
              id="event_startDate"
              name="event_startDate"
              type="datetime-local"
              class="form__input"
              placeholder="Start date"
            />
            <input
              id="event_endDate"
              name="event_endDate"
              type="datetime-local"
              class="form__input"
            />
            <div class="event-checkbox">
              <input
                id="event_allDay"
                name="event_allDay"
                type="checkbox"
                value="1"
              />
              <label for="event_allDay"> All day</label>
            </div>
            <input
              id="event_location"
              name="event_location"
              type="text"
              class="form__input"
              placeholder="Location"
            />
            <textarea
              id="event_description"
              name="event_description"
              class="form__input event_description"
              placeholder="Description"
            ></textarea>
            <input
              id="event_image"
              name="event_image"
              type="file"
              class="form__input_image"
              placeholder="Image"
              accept="image/*"
            />

            <div class="event-forum-btn">
              <input class="submit-btn-event" type="submit" value="Submit" />
              <button class="cancel-btn-event">Cancel</button>
            </div>
          </form>
        </div>
