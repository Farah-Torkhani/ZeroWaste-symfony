				<li><a href="" class="text-decoration">Collect</a></li>
						</li>

						<div class="navigation__list--2">
							<li class="navigation__item">
								<a href="{{path('app_login')}}" class="navigation__link">Login</a>
								{# {{path('app_login')}} #}
							</li>
							<div class="navigation__btn">
								<a href="{{path('app_registration')}}" class="navigation__primary-btn">Sign up</a>
							</div>
						</div>
					</ul>
				</nav>
			</div>
		{% endblock %}


		{% block body %}{% endblock %}

		{% block JsScript %}{% endblock %}
	</body>
</html></body></html>
